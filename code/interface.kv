<AuthInput@TextInput>:
    multiline: False
    font_size: 16
    size_hint_y: None
    height: 40
    padding: [10, 10]
    background_normal: ''
    background_color: 1, 1, 1, 1
    foreground_color: 0, 0, 0, 1
    cursor_color: 0, 0, 0, 1
    canvas.after:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1.1
            rectangle: self.x, self.y, self.width, self.height

<AuthButton@Button>:
    font_size: 18
    size_hint_y: None
    height: 50
    background_normal: ''
    background_down: ''
    color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: self.background_color if self.state == 'normal' else (0.8, 0.8, 0.8, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [8,]
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1.2
            rounded_rectangle: self.x, self.y, self.width, self.height, 8

ScreenManager:
    id: screen_manager
    WelcomeScreen:
    LoginScreen:
    RegisterScreen:
    LibraryScreen:
    ReaderScreen:

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        padding: 0
        spacing: 0
        
        FileChooserIconView:
            id: filechooser
            path: root.path
            filters: ['*.pdf', '*.epub', '*.PDF', '*.EPUB']
            
            bar_width: 10
            scroll_type: ['bars', 'content']
            bar_inactive_color: 0, 0, 0, 0 
            
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1 
                Rectangle:
                    pos: self.pos
                    size: self.size

        BoxLayout:
            size_hint_y: None
            height: 60
            spacing: 20
            padding: [15, 10]
            
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: "Отмена"
                background_normal: ''
                background_color: 0.8, 0.4, 0.4, 1
                color: 1, 1, 1, 1
                on_release: root.cancel()

            Button:
                text: "Загрузить"
                background_normal: ''
                background_color: 0.5, 0.7, 0.5, 1
                color: 1, 1, 1, 1
                on_release: root.load(filechooser.path, filechooser.selection)

<WelcomeScreen>:
    name: 'welcome'
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'BookFlow'
            font_size: 48
            color: 0, 0, 0, 1
            bold: True
        Widget:
        AuthButton:
            text: 'Войти'
            background_color: 0.7, 0.8, 0.7, 1
            on_release: app.root.current = 'login'
        AuthButton:
            text: 'Зарегистрироваться'
            background_color: 0.6, 0.7, 0.9, 1
            on_release: app.root.current = 'register'
        Label:
            text: 'App v1.0'
            color: 0.5, 0.5, 0.5, 1
            size_hint_y: None
            height: 30

<LoginScreen>:
    name: 'login'
    login_input: login_field
    pass_input: pass_field
    error_label: err_lbl
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            width: 400
            height: 500
            spacing: 10
            padding: 20
            Label:
                text: 'Вход в аккаунт'
                font_size: 32
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 60
                bold: True
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 70
                Label:
                    text: 'Логин'
                    color: 0, 0, 0, 1
                    text_size: self.size
                    halign: 'left'
                    valign: 'bottom'
                    size_hint_y: None
                    height: 25
                AuthInput:
                    id: login_field
                    hint_text: 'Введите логин'
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 70
                Label:
                    text: 'Пароль'
                    color: 0, 0, 0, 1
                    text_size: self.size
                    halign: 'left'
                    valign: 'bottom'
                    size_hint_y: None
                    height: 25
                AuthInput:
                    id: pass_field
                    hint_text: 'Введите пароль'
                    password: True
            Label:
                id: err_lbl
                text: ''
                color: 0.8, 0, 0, 1
                size_hint_y: None
                height: 30
            Widget:
                size_hint_y: 0.2
            AuthButton:
                text: 'Войти'
                background_color: 0.7, 0.8, 0.7, 1
                on_release: root.do_login()
            Button:
                text: 'Выйти' 
                background_normal: ''
                background_color: 0.9, 0.6, 0.6, 1
                color: 0, 0, 0, 1
                size_hint_y: None
                height: 50
                on_release: 
                    app.root.current = 'welcome'
                    root.reset()
                canvas.before:
                    Color:
                        rgba: 0.9, 0.6, 0.6, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [8,]
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1.2
                        rounded_rectangle: self.x, self.y, self.width, self.height, 8

